@using PurpleBuzz.Models;
@model Category
<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <div class="card-title">Add Category</div>
            <hr>
            <form method="post" asp-action="create" asp-controller="category" asp-area="admin" >
                <div class="form-group">
                    <label asp-for="Title" >Name</label>
                    <input asp-for="Title" class="form-control"  placeholder="Enter Your Name">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-light px-5">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>